@model KahootTeamRealTimeAdmin.Models.QuestionViewModel

@{
    ViewData["Title"] = "Create Question";
}
<link rel="stylesheet" href="~/css/createQuestion.css">
<div class="wrapper">
    <div class="header">
        <h1>Create Question</h1>
    </div>
    <hr />
    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Question Text</label>
                <input asp-for="Content" class="form-control" placeholder="Enter your question" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>