<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KahootTeamRealTimeAdmin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="main-nav">
        <div class="nav-container">
            <div class="nav-left">
                <a class="nav-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gamepad"></i>
                    KahootTeamRealTime
                </a>
                <ul class="nav-links">
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Privacy">
                            <i class="fas fa-shield-alt"></i> Privacy
                        </a>
                    </li>
                </ul>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="nav-right">
                    <div class="user-info">
                        <i class="fas fa-user-circle"></i>
                        <span>Welcome, @User.Identity.Name!</span>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>
            }
        </div>
    </nav>

    <div class="main-container">
        @RenderBody()
    </div>

    <footer class="main-footer">
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year - KahootTeamRealTime</p>
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>