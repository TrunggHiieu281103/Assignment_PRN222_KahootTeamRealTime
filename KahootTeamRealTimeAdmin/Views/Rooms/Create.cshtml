@model KahootTeamRealTimeAdmin.Models.RoomViewModel

@{
    ViewData["Title"] = "Create Room";
}
<link rel="stylesheet" href="~/css/createRoom.css">
<div class="wrapper">
    <div class="form-header">
        <h2>Create New Room</h2>
        <p class="subtitle">Set up your kahoot room</p>
    </div>

    <div class="form-container">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-section">
                <div class="input-container">
                    <i class="fas fa-door-open icon"></i>
                    
                    <input asp-for="Name" class="form-control" placeholder="Enter room name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Create Room
                </button>
            </div>
        </form>
    </div>
</div>